code:
  version: "0.1.0"
  description: "Source code layout"

  folders:
    mandatory: 
      - module:
          schema: module
          max_size: 10MB
    optional: 
      - lib
    forbidden: 
      - tmp

  files:
    mandatory: []
    optional: 
      - "*.py":
          max_size: 10MB
      - "*.go"
    forbidden: 
      - "*.exe"

module:
  version: "0.2.0"
  description: "Module layout"

  folders:
    forbidden:
      - "*"